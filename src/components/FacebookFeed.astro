<style>
/* SECCIÃ“N PRINCIPAL */
.fb-section {
  width: 100%;
  margin: 40px 0;
  padding: 0 16px;
}

/* HEADER TOP */
.fb-header-top {
  background: linear-gradient(135deg, #0b2545 0%, #1a3a52 100%);
  border-radius: 16px 16px 0 0;
  padding: 24px 32px;
  color: white;
  position: relative;
  overflow: hidden;
}

.fb-header-top::before {
  content: '';
  position: absolute;
  top: 0;
  right: 0;
  width: 300px;
  height: 300px;
  background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
  border-radius: 50%;
}

.fb-header-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
  z-index: 1;
}

.fb-title-wrapper {
  display: flex;
  align-items: center;
  gap: 16px;
}

.fb-icon-container {
  background: rgba(255,255,255,0.2);
  padding: 12px;
  border-radius: 12px;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255,255,255,0.3);
}

.fb-icon {
  width: 28px;
  height: 28px;
  color: white;
}

.fb-title {
  font-size: 24px;
  font-weight: 800;
  margin: 0;
  letter-spacing: 1px;
  text-transform: uppercase;
}

.fb-subtitle {
  font-size: 13px;
  color: rgba(255,255,255,0.8);
  margin: 4px 0 0 0;
  font-weight: 400;
}

.fb-badge {
  background: rgba(255,215,0,0.9);
  color: #0b2545;
  padding: 6px 12px;
