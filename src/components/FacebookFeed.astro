  text-align: center;
  border-radius: 0 0 12px 12px;
  border: 1px solid #e5e7eb;
  border-top: 2px solid #0b2545;
}

.fb-footer p {
  margin: 0;
  font-size: 13px;
  color: #0b2545;
  font-weight: 600;
}

