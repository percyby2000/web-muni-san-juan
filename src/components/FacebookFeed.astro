.fb-wrapper {
  background: white;
  border-radius: 0 0 16px 16px;
  padding: 24px;
  box-shadow: 0 20px 50px rgba(11, 37, 69, 0.15);
  border: 1px solid #e5e7eb;
  border-top: none;
}

/* CONTENEDOR FEED */
.fb-container {
  overflow: hidden;
  border-radius: 12px;
  background: linear-gradient(to bottom, #ffffff, #f9fafb);
  border: 1px solid #e5e7eb;
}

.fb-container iframe {
  width: 100% !important;
  border-radius: 12px;
}

/* FOOTER */
.fb-footer {
  background: linear-gradient(90deg, rgba(11, 37, 69, 0.05) 0%, rgba(31, 41, 55, 0.05) 100%);
