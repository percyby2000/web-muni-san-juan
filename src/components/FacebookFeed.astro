@media (max-width: 768px) {
  .fb-section {
    margin: 32px 0;
    padding: 0 12px;
  }

  .fb-header-top {
    padding: 20px 24px;
  }

  .fb-header-content {
    flex-direction: column;
    gap: 12px;
    align-items: flex-start;
  }

  .fb-title {
    font-size: 20px;
  }

  .fb-subtitle {
    font-size: 12px;
  }

  .fb-wrapper {
    padding: 16px;
  }
}

/* RESPONSIVE MOBILE */
@media (max-width: 640px) {
  .fb-section {
