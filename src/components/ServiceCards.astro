// filepath: d:\muni san juan\muni_san_juan\src\components\ServiceCards.astro
const services = [
  {
    icon: "laptop",
    title: "Mesa de Partes Virtual",
    url: "/mesa-partes",
    description: "Sistema de registro y seguimiento de documentos oficiales"
  },
  {
    icon: "mail",
    title: "Correo Institucional",
    url: "/correo",
    description: "Plataforma de comunicación oficial municipal"
  },
  {
    icon: "car",
    title: "Récord de Infracciones",
    url: "/infracciones",
    description: "Verificación de papeletas y multas de tránsito"
  },
  {
    icon: "receipt",
    title: "Estado de Cuenta - Rentas",
    url: "/rentas",
    description: "Consulta de tributos y obligaciones municipales"
  },
  {
    icon: "building",
    title: "Centro de Convenciones - Cusco",
    url: "/convenciones",
    description: "Reserva de ambientes para eventos públicos"
  },
  {
    icon: "globe",
    title: "Intranet Muni de Cusco",
    url: "/intranet",
    description: "Portal interno para funcionarios municipales"
  },
  {
    icon: "smartphone",
    title: "Pagos en Línea",
    url: "/pagos",
    description: "Sistema de pagos electrónicos municipales"
  },
  {
    icon: "file",
    title: "Formato Único de Trámite",
    url: "/tramite",
    description: "Descarga de formatos administrativos vigentes"
  },
  {
    icon: "book",
    title: "Libro de Reclamaciones",
    subtitle: "DIGITAL",
    url: "/reclamaciones",
    description: "Presenta tus reclamos y sugerencias en línea"
  }
];
---

<section class="relative w-full py-20 px-4 bg-white overflow-hidden">
  
  <!-- Copos de nieve decorativos -->
  <div class="absolute inset-0 pointer-events-none">
    {[...Array(20)].map((_, i) => (
      <div 
        class="snowflake absolute text-blue-300/40"
        style={`
          left: ${Math.random() * 100}%;
          top: ${Math.random() * 100}%;
          animation-delay: ${Math.random() * 5}s;
          font-size: ${Math.random() * 20 + 10}px;
        `}
      >
        ❄
      </div>
    ))}
  </div>

  <div class="relative max-w-7xl mx-auto">
    
    <!-- Grid de servicios -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service) => (
        <a href={service.url} class="service-card group block">
          <div class="relative bg-[#f5e6e8] rounded-3xl p-8 transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 min-h-[320px] flex flex-col items-center justify-center text-center">
            
            <!-- Copos de nieve en las cards -->
            <div class="absolute top-4 right-4 text-blue-300/60 text-xl">❄</div>
            <div class="absolute bottom-6 left-4 text-blue-300/60 text-sm">❄</div>
            
            <!-- Ícono grande -->
            <div class="mb-6 transform group-hover:scale-110 transition-transform duration-300 flex items-center justify-center">
              <svg class="w-28 h-28 text-gray-900" fill="currentColor" viewBox="0 0 24 24">
                {service.icon === 'laptop' && (
                  <path d="M20 18c1.1 0 1.99-.9 1.99-2L22 5c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v11c0 1.1.9 2 2 2H0c0 1.1.9 2 2 2h20c1.1 0 2-.9 2-2h-4zM4 5h16v11H4V5zm8 14c-.55 0-1-.45-1-1s.45-1 1-1 1 .45 1 1-.45 1-1 1z"/>
                )}
                {service.icon === 'mail' && (
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                )}
                {service.icon === 'car' && (
                  <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5h-11c-.66 0-1.21.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z"/>
                )}
                {service.icon === 'receipt' && (
                  <path d="M19.5 3.5L18 2l-1.5 1.5L15 2l-1.5 1.5L12 2l-1.5 1.5L9 2 7.5 3.5 6 2v14H3v3c0 1.66 1.34 3 3 3h12c1.66 0 3-1.34 3-3V2l-1.5 1.5zM19 19c0 .55-.45 1-1 1s-1-.45-1-1v-3H8V5h11v14z"/>
                )}
                {service.icon === 'building' && (
                  <path d="M12 7V3H2v18h20V7H12zM6 19H4v-2h2v2zm0-4H4v-2h2v2zm0-4H4V9h2v2zm0-4H4V5h2v2zm4 12H8v-2h2v2zm0-4H8v-2h2v2zm0-4H8V9h2v2zm0-4H8V5h2v2zm10 12h-8v-2h2v-2h-2v-2h2v-2h-2V9h8v10zm-2-8h-2v2h2v-2zm0 4h-2v2h2v-2z"/>
                )}
                {service.icon === 'globe' && (
                  <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zm6.93 6h-2.95c-.32-1.25-.78-2.45-1.38-3.56 1.84.63 3.37 1.91 4.33 3.56zM12 4.04c.83 1.2 1.48 2.53 1.91 3.96h-3.82c.43-1.43 1.08-2.76 1.91-3.96zM4.26 14C4.1 13.36 4 12.69 4 12s.1-1.36.26-2h3.38c-.08.66-.14 1.32-.14 2 0 .68.06 1.34.14 2H4.26zm.82 2h2.95c.32 1.25.78 2.45 1.38 3.56-1.84-.63-3.37-1.9-4.33-3.56zm2.95-8H5.08c.96-1.66 2.49-2.93 4.33-3.56C8.81 5.55 8.35 6.75 8.03 8zM12 19.96c-.83-1.2-1.48-2.53-1.91-3.96h3.82c-.43 1.43-1.08 2.76-1.91 3.96zM14.34 14H9.66c-.09-.66-.16-1.32-.16-2 0-.68.07-1.35.16-2h4.68c.09.65.16 1.32.16 2 0 .68-.07 1.34-.16 2zm.25 5.56c.6-1.11 1.06-2.31 1.38-3.56h2.95c-.96 1.65-2.49 2.93-4.33 3.56zM16.36 14c.08-.66.14-1.32.14-2 0-.68-.06-1.34-.14-2h3.38c.16.64.26 1.31.26 2s-.1 1.36-.26 2h-3.38z"/>
                )}
                {service.icon === 'smartphone' && (
                  <path d="M17 1.01L7 1c-1.1 0-2 .9-2 2v18c0 1.1.9 2 2 2h10c1.1 0 2-.9 2-2V3c0-1.1-.9-1.99-2-1.99zM17 19H7V5h10v14z"/>
                )}
                {service.icon === 'file' && (
                  <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z"/>
                )}
                {service.icon === 'book' && (
                  <>
                    <!-- Libro con cursor -->
                    <path d="M18 2H6c-1.1 0-2 .9-2 2v16c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zM6 4h5v8l-2.5-1.5L6 12V4z"/>
                    <!-- Cursor de mouse -->
                    <path d="M14 14l-3 3v-2h-2v-2h2v-2z" opacity="0.8"/>
                  </>
                )}
              </svg>
            </div>
            
            <!-- Título -->
            <div>
              <h3 class="text-xl font-bold text-gray-900 leading-tight group-hover:text-blue-800 transition-colors duration-300">
                {service.title}
              </h3>
              {service.subtitle && (
                <span class="inline-block mt-2 px-3 py-1 bg-gray-900 text-white text-xs font-bold rounded">
                  {service.subtitle}
                </span>
              )}
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  @keyframes fall {
    0% {
      transform: translateY(-10px) rotate(0deg);
      opacity: 0;
    }
    50% {
      opacity: 1;
    }
    100% {
      transform: translateY(100vh) rotate(360deg);
      opacity: 0;
    }
  }

  .snowflake {
    animation: fall linear infinite;
    animation-duration: 10s;
  }

  .service-card {
    text-decoration: none;
  }
</style>