---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';

const gerencias = [
  {
    titulo: "Gerencia Municipal Metropolitana",
    cargo: "Gerente:",
    jefe: "Oscar Remigio Lozán Luyo",
    horario: "Lun a Vie 8:30 a.m. a 6 p.m.",
    telefono: "632-1300 Anexo 1596"
  },
  {
    titulo: "Oficina General de Administración",
    cargo: "Jefe",
    jefe: "Fabricio Antonio Orozco Vélez",
    horario: "Lun a Vie 8:30 a.m. a 6 p.m.",
    telefono: "632-1300 Anexo 1592"
  },
  {
    titulo: "Oficina General de Comunicaciones y Relaciones Interinstitucionales",
    cargo: "Encargada Administrativa:",
    jefe: "Olinda María Merzthal Yap",
    horario: "Lun a Vie 8:30 a.m. a 6 p.m.",
    telefono: "632-1300 Anexo 1797"
  },
  {
    titulo: "Oficina General de Planificación y Finanzas",
    cargo: "Jefe:",
    jefe: "Melissa Castillo Carranza",
    horario: "Lun a Vie 8:30 a.m. a 6 p.m.",
    telefono: "632-1300 Anexo 6023 / Sec Anexo 1497"
  },
  {
    titulo: "Procuraduría Pública Municipal",
    cargo: "Procurador Adjunto:",
    jefe: "Evelin Giuliana García Luna",
    horario: "Lun a Vie 8 a.m. a 4 p.m.",
    telefono: "632-1300 Anexo 1594"
  },
  {
    titulo: "Oficina General de Asuntos Jurídicos",
    cargo: "Jefe:",
    jefe: "Raul Eduardo Fernandez Olivares",
    horario: "Lun a Vie 8:30 a.m. a 6 p.m.",
    telefono: "632-1300 Anexo 1364"
  }
];
---

<Layout>
  <section class="py-20 px-6 bg-white">
    <div class="max-w-7xl mx-auto">
      
      <!-- Header -->
      <div class="mb-16">
        <h1 class="text-5xl font-bold text-gray-900 mb-4">Estructura Orgánica</h1>
        <div class="h-1 w-32 bg-blue-400 rounded-full"></div>
        <p class="text-gray-600 text-lg mt-4">Conoce nuestras gerencias y oficinas administrativas</p>
      </div>

      <!-- Grid de Gerencias -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {gerencias.map((gerencia) => (
          <div class="bg-blue-50 rounded-2xl p-8 hover:shadow-lg transition-all duration-300">
            
            <!-- Título -->
            <h3 class="text-lg font-bold text-gray-900 mb-8 leading-tight">
              {gerencia.titulo}
            </h3>

            <!-- Cargo -->
            <p class="text-sm text-gray-600 font-semibold mb-2">
              {gerencia.cargo}
            </p>

            <!-- Jefe -->
            <p class="text-gray-700 font-light text-base mb-6">
              {gerencia.jefe}
            </p>

            <!-- Horario -->
            <div class="mb-4">
              <p class="text-sm text-gray-600 flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                {gerencia.horario}
              </p>
            </div>

            <!-- Teléfono -->
            <div class="mb-8">
              <p class="text-sm text-gray-700 flex items-center gap-2">
                <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                {gerencia.telefono}
              </p>
            </div>

            <!-- Botón -->
            <button class="w-full px-4 py-2.5 border-2 border-blue-400 text-blue-500 font-semibold rounded-lg hover:bg-blue-400 hover:text-white transition-all duration-300 text-sm">
              Ver más
            </button>

          </div>
        ))}
      </div>

    </div>
  </section>
</Layout>

<style>
  @media (max-width: 768px) {
    section {
      padding: 40px 16px;
    }

    h1 {
      font-size: 2.5rem;
    }
  }
</style>